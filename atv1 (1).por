
    programa {
  funcao inicio() {
    // Exibindo variável
    inteiro diaDaSemana

    escreva("Digite um número para um dia da semana: ")
    leia(diaDaSemana)

    escolha (diaDaSemana) {
      caso 2: 
      caso 3: 
      caso 4:
      caso 5:
      caso 6:
        escreva("Dia útil.")
      pare
      caso 1:
      caso 7:
        escreva("Final de semana")
      pare
      caso contrario:
        escreva("Opção inválida.")
    }
  }
}
  }
}
